<mvc:View controllerName="safetysuitezclaimemployee.controller.Main" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<Text class="sapUiLargeMargin" text="{i18n>Paragraph}"></Text>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" text="{i18n>initialCreateButtonText}" press="openInjuryTab" type="Emphasized"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>