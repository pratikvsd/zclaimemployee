<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified">
	<Dialog id="attachmentDialog" >
		<content>
			<u:FileUploader class="sapUiResponsiveMargin" id="fileUploader" name="myFileUpload" uploadUrl="upload/" tooltip="Upload your file to the local server"
				uploadComplete="handleUploadComplete"/>
		</content>
		<beginButton>
			<Button text="ok" press="onUploadFile" type="Emphasized"/>
		</beginButton>
		<endButton>
			<Button icon="sap-icon://sys-cancel-2" text="Cancel" press="handleWizardCancel" type="Reject"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>