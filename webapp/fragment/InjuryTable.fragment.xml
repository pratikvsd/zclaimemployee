<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.f" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog showHeader="false" verticalScrolling="false" contentHeight="90%" contentWidth="90%">
		<content>
			<f:DynamicPage stickySubheaderProvider="claimFormWizard" toggleHeaderOnTitleClick="false" class="sapUiNoContentPadding" showFooter="true">
				<f:content>
					<VBox>
						<form:SimpleForm class="sapUiResponsiveContentPadding" id="InjuryInputForm" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4"
							labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3"
							columnsL="2" columnsM="2" singleContainerFullSize="false">
							<form:content>
								<core:Title text="{i18n>InjuryInputEmployee}"/>
								<!--<Label text="{i18n>InjuryInputEmployee}"/>-->
								<Input type="Text"></Input>

								<core:Title text="{i18n>InjuryInputRegulatoryAuthority}"/>
											<Select>
												<items>
													<core:Item/>
													<core:Item/>
													<core:Item/>
												</items>
											</Select>
							</form:content>
						</form:SimpleForm>
						<Table class="sapUiResponsiveContentPadding">
							<columns>
								<Column>
									<Text text="{i18n>InjuryTableColumnInjuryDescription}"/>
								</Column>
								<Column>
									<Text text="{i18n>InjuryTableColumnDate}"/>
								</Column>
								<Column>
									<Text text="{i18n>InjuryTableColumnBodyPart}"/>
								</Column>
								<Column>
									<Text text="{i18n>InjuryTableColumnSide}"/>
								</Column>
								<Column>
									<Text text="{i18n>InjuryTableColumnInjuryType}"/>
								</Column>
							</columns>
						</Table>
					</VBox>
				</f:content>
				<f:footer>
					<OverflowToolbar>
						<Button text="{i18n>WizardFooterCancelBtn}" icon="sap-icon://sys-cancel-2" type="Reject" press="handleWizardCancel"/>
						<ToolbarSpacer/>
						<Button text="{i18n>CreateIncident}" icon="sap-icon://create-entry-time"/>
						<Button text="{i18n>StartClaim}" icon="sap-icon://create-form" type="Emphasized" press="openPrivacyStatementTab"/>
					</OverflowToolbar>
				</f:footer>
			</f:DynamicPage>
		</content>
	</Dialog>
</core:FragmentDefinition>